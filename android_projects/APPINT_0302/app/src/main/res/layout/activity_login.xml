<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_bg"
    android:padding="10dp">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/frameLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/login_title"
            android:id="@+id/tv_title"
            android:layout_gravity="center"
            android:textColor="?android:textColorPrimaryInverse" />

    </FrameLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_logo"
        android:background="@drawable/title"
        android:alpha="0.5"
        android:layout_below="@+id/frameLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:hint="e-mail"
        android:id="@+id/et_email"
        android:layout_below="@+id/iv_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:gravity="center_vertical"
        android:textColor="?android:textColorPrimaryInverse"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/shape_tv_bg"
        android:imeOptions="actionDone"
        android:textColorHint="@color/global_text_hint_inverse" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:hint="password"
        android:id="@+id/et_pwd"
        android:gravity="center_vertical"
        android:textColor="?android:textColorPrimaryInverse"
        android:layout_below="@+id/et_email"
        android:layout_alignLeft="@+id/et_email"
        android:layout_alignStart="@+id/et_email"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/shape_tv_bg"
        android:textColorHint="@color/global_text_hint_inverse"
        android:imeOptions="actionGo"
        android:password="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/fogot_pwd"
        android:id="@+id/tv_fogotpwd"
        android:layout_below="@+id/et_pwd"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:alpha="0.6"
        android:textColor="?android:textColorPrimaryInverse" />

    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Sign In"
        android:id="@+id/btn_signin"
        android:layout_below="@+id/tv_fogotpwd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/selector_btn_login_bg"
        android:alpha="0.8"
        android:textColor="?android:textColorPrimaryInverse" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Don&apos;t have and account?"
        android:id="@+id/tv_notaccount"
        android:alpha="0.6"
        android:textColor="?android:textColorPrimaryInverse"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/btn_signin"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="SIGN UP"
        android:id="@+id/tv_signup"
        android:textColor="?android:textColorPrimaryInverse"
        android:layout_below="@+id/tv_notaccount"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
