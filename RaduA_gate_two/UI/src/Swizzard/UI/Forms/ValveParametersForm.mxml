				var supplyPressure:Number = (steamSupplyPressInput) ? parseFloat(steamSupplyPressInput.text) : 0;
				SteamCalculatorWindow.Show(calculatorResultHandler, supplyPressure, SteamCalculatorType.PRESSURE_DROP);
