								break;
							case 60:
								specificGravity	= 1.1;
								break;
							case 65:
								specificGravity	= 1.11;
								break;
							case 100:
								specificGravity	= 1.145;
								break;
						}
						// no break here, uses the same formula as WATER
						
					case "water":
						var reqFlow:Number = parseFloat(requiredFlowInput_B.text);
						if (isNaN(reqFlow))
