<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 activate="{shadowFilter.alpha = 0.65}"
		 deactivate="{shadowFilter.alpha = 0.3}"
		 width="100%" height="100%">
	
	<s:filters>
		<s:DropShadowFilter id="shadowFilter" quality="3" distance="1" angle="90" blurX="4" blurY="3" color="0" alpha="0.65"/>
	</s:filters>
	
	
	<s:Rect width="100%" height="100%"
			topLeftRadiusX="50" topLeftRadiusY="50" topRightRadiusX="50" topRightRadiusY="50"
			bottomLeftRadiusX="10" bottomLeftRadiusY="10" bottomRightRadiusX="10" bottomRightRadiusY="10">
		<s:fill>
			<s:SolidColor color="0xdbe8f0"/>
		</s:fill>
	</s:Rect>
</s:Group>
